
@page "/UserList"
@using WalletManager.Database
<h3>UserList</h3>


@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Niiddlename</th>
                <th>Email</th>
                <th>User Password</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.CurrencyType</td>
                    <td>@user.UserEmail</td>
                    <td>@user.UserPassword</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<User> users;

    protected override async Task OnInitializedAsync()
    {
        // Simulate asynchronous loading to demonstrate a loading indicator
        await Task.Delay(800);
        users = App.Database.GetTableRows<User>("User");

    }

    
}
